{
  ".schema_version": "1",
  "name": "metalcloud",
  "type": "provider",
  "version": "v2.2.0",
  "provider": {
    "api_key": {
      "Type": "String",
      "Optional": true,
      "Description": "API Key used to authenticate with the service provider",
      "DefaultFunc": "ENV(METALCLOUD_API_KEY)"
    },
    "endpoint": {
      "Type": "String",
      "Optional": true,
      "Description": "The URL to the API",
      "DefaultFunc": "ENV(METALCLOUD_ENDPOINT)",
      "Default": {
        "Type": "string",
        "Value": "https://api.bigstep.com/metal-cloud"
      }
    },
    "user_email": {
      "Type": "String",
      "Optional": true,
      "Description": "User email",
      "DefaultFunc": "ENV(METALCLOUD_USER_EMAIL)"
    }
  },
  "resources": {
    "metalcloud_infrastructure": {
      "__timeouts__": [
        "create",
        "update"
      ],
      "allow_data_loss": {
        "Type": "Bool",
        "Optional": true,
        "Default": {
          "Type": "bool",
          "Value": "true"
        }
      },
      "attempt_soft_shutdown": {
        "Type": "Bool",
        "Optional": true,
        "Default": {
          "Type": "bool",
          "Value": "true"
        }
      },
      "await_delete_finished": {
        "Type": "Bool",
        "Optional": true,
        "Default": {
          "Type": "bool",
          "Value": "false"
        }
      },
      "await_deploy_finished": {
        "Type": "Bool",
        "Optional": true,
        "Default": {
          "Type": "bool",
          "Value": "true"
        }
      },
      "datacenter_name": {
        "Type": "String",
        "Optional": true,
        "DefaultFunc": "ENV(METALCLOUD_DATACENTER)"
      },
      "hard_shutdown_after_timeout": {
        "Type": "Bool",
        "Optional": true,
        "Default": {
          "Type": "bool",
          "Value": "true"
        }
      },
      "infrastructure_label": {
        "Type": "String",
        "Required": true
      },
      "instance_array": {
        "Type": "List",
        "Required": true,
        "IsBlock": true,
        "Elem": {
          "Type": "SchemaInfo",
          "Info": {
            "drive_array": {
              "Type": "List",
              "Optional": true,
              "IsBlock": true,
              "Elem": {
                "Type": "SchemaInfo",
                "Info": {
                  "drive_array_id": {
                    "Type": "Int",
                    "Optional": true,
                    "Computed": true
                  },
                  "drive_array_label": {
                    "Type": "String",
                    "Required": true
                  },
                  "drive_array_storage_type": {
                    "Type": "String",
                    "Required": true
                  },
                  "drive_size_mbytes_default": {
                    "Type": "Int",
                    "Optional": true,
                    "Default": {
                      "Type": "int",
                      "Value": "40960"
                    }
                  },
                  "instance_array_id": {
                    "Type": "Int",
                    "Optional": true,
                    "Computed": true
                  },
                  "volume_template_id": {
                    "Type": "Int",
                    "Optional": true
                  }
                }
              }
            },
            "firewall_rule": {
              "Type": "Set",
              "Optional": true,
              "IsBlock": true,
              "Elem": {
                "Type": "SchemaInfo",
                "Info": {
                  "firewall_rule_description": {
                    "Type": "String",
                    "Optional": true
                  },
                  "firewall_rule_destination_ip_address_range_end": {
                    "Type": "String",
                    "Optional": true
                  },
                  "firewall_rule_destination_ip_address_range_start": {
                    "Type": "String",
                    "Optional": true
                  },
                  "firewall_rule_enabled": {
                    "Type": "Bool",
                    "Optional": true,
                    "Default": {
                      "Type": "bool",
                      "Value": "true"
                    }
                  },
                  "firewall_rule_ip_address_type": {
                    "Type": "String",
                    "Optional": true,
                    "Default": {
                      "Type": "string",
                      "Value": "ipv4"
                    }
                  },
                  "firewall_rule_port_range_end": {
                    "Type": "Int",
                    "Optional": true
                  },
                  "firewall_rule_port_range_start": {
                    "Type": "Int",
                    "Optional": true
                  },
                  "firewall_rule_protocol": {
                    "Type": "String",
                    "Optional": true,
                    "Default": {
                      "Type": "string",
                      "Value": "tcp"
                    }
                  },
                  "firewall_rule_source_ip_address_range_end": {
                    "Type": "String",
                    "Optional": true
                  },
                  "firewall_rule_source_ip_address_range_start": {
                    "Type": "String",
                    "Optional": true
                  }
                }
              }
            },
            "instance_array_boot_method": {
              "Type": "String",
              "Optional": true,
              "Default": {
                "Type": "string",
                "Value": "pxe_iscsi"
              }
            },
            "instance_array_disk_count": {
              "Type": "Int",
              "Optional": true,
              "Default": {
                "Type": "int",
                "Value": "0"
              }
            },
            "instance_array_disk_size_mbytes": {
              "Type": "Int",
              "Optional": true,
              "Default": {
                "Type": "int",
                "Value": "0"
              }
            },
            "instance_array_firewall_managed": {
              "Type": "Bool",
              "Optional": true,
              "Default": {
                "Type": "bool",
                "Value": "true"
              }
            },
            "instance_array_id": {
              "Type": "Int",
              "Optional": true,
              "Computed": true
            },
            "instance_array_instance_count": {
              "Type": "Int",
              "Required": true
            },
            "instance_array_label": {
              "Type": "String",
              "Required": true
            },
            "instance_array_processor_core_count": {
              "Type": "Int",
              "Optional": true,
              "Default": {
                "Type": "int",
                "Value": "1"
              }
            },
            "instance_array_processor_core_mhz": {
              "Type": "Int",
              "Optional": true,
              "Default": {
                "Type": "int",
                "Value": "1000"
              }
            },
            "instance_array_processor_count": {
              "Type": "Int",
              "Optional": true,
              "Default": {
                "Type": "int",
                "Value": "1"
              }
            },
            "instance_array_ram_gbytes": {
              "Type": "Int",
              "Optional": true,
              "Default": {
                "Type": "int",
                "Value": "1"
              }
            },
            "interface": {
              "Type": "List",
              "Optional": true,
              "IsBlock": true,
              "Elem": {
                "Type": "SchemaInfo",
                "Info": {
                  "interface_index": {
                    "Type": "Int",
                    "Required": true
                  },
                  "network_id": {
                    "Type": "Int",
                    "Optional": true,
                    "Computed": true
                  },
                  "network_label": {
                    "Type": "String",
                    "Required": true
                  }
                }
              }
            },
            "volume_template_id": {
              "Type": "Int",
              "Optional": true,
              "Default": {
                "Type": "int",
                "Value": "0"
              }
            }
          }
        }
      },
      "keep_detaching_drives": {
        "Type": "Bool",
        "Optional": true,
        "Default": {
          "Type": "bool",
          "Value": "true"
        }
      },
      "network": {
        "Type": "List",
        "Optional": true,
        "IsBlock": true,
        "Elem": {
          "Type": "SchemaInfo",
          "Info": {
            "network_label": {
              "Type": "String",
              "Required": true
            },
            "network_lan_autoallocate_ips": {
              "Type": "Bool",
              "Optional": true,
              "Default": {
                "Type": "bool",
                "Value": "false"
              }
            },
            "network_type": {
              "Type": "String",
              "Required": true
            }
          }
        }
      },
      "prevent_deploy": {
        "Type": "Bool",
        "Optional": true
      },
      "skip_ansible": {
        "Type": "Bool",
        "Optional": true,
        "Default": {
          "Type": "bool",
          "Value": "false"
        }
      },
      "soft_shutdown_timeout_seconds": {
        "Type": "Int",
        "Optional": true,
        "Default": {
          "Type": "int",
          "Value": "180"
        }
      }
    }
  },
  "data-sources": {
    "metalcloud_volume_template": {
      "volume_template_id": {
        "Type": "Int",
        "Computed": true
      },
      "volume_template_label": {
        "Type": "String",
        "Required": true
      }
    }
  }
}