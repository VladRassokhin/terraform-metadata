{
  ".schema_version": "1",
  "name": "vra7",
  "type": "provider",
  "version": "v0.5.0",
  "provider": {
    "host": {
      "Type": "String",
      "Required": true,
      "Description": "host name.domain name of the vRealize Automation server, for example, mycompany.mktg.mydomain.com.",
      "DefaultFunc": "ENV(VRA7_HOST)"
    },
    "insecure": {
      "Type": "Bool",
      "Optional": true,
      "Description": "Specify whether to validate TLS certificates.",
      "DefaultFunc": "ENV(VRA7_INSECURE)"
    },
    "password": {
      "Type": "String",
      "Required": true,
      "Description": "Tenant administrator password.",
      "DefaultFunc": "ENV(VRA7_PASSWORD)"
    },
    "tenant": {
      "Type": "String",
      "Required": true,
      "Description": "Specifies the tenant URL token determined by the system administratorwhen creating the tenant, for example, support.",
      "DefaultFunc": "ENV(VRA7_TENANT)"
    },
    "username": {
      "Type": "String",
      "Required": true,
      "Description": "Tenant administrator username.",
      "DefaultFunc": "ENV(VRA7_USERNAME)"
    }
  },
  "resources": {
    "vra7_deployment": {
      "businessgroup_id": {
        "Type": "String",
        "Optional": true,
        "Computed": true
      },
      "businessgroup_name": {
        "Type": "String",
        "Optional": true,
        "Computed": true
      },
      "catalog_item_id": {
        "Type": "String",
        "Optional": true,
        "Computed": true
      },
      "catalog_item_name": {
        "Type": "String",
        "Optional": true
      },
      "deployment_configuration": {
        "Type": "Map",
        "Optional": true,
        "Elem": {
          "Type": "SchemaElements",
          "ElementsType": "String"
        }
      },
      "description": {
        "Type": "String",
        "Optional": true,
        "Computed": true
      },
      "failed_message": {
        "Type": "String",
        "Optional": true,
        "Computed": true
      },
      "reasons": {
        "Type": "String",
        "Optional": true,
        "Computed": true
      },
      "request_status": {
        "Type": "String",
        "Computed": true
      },
      "resource_configuration": {
        "Type": "Map",
        "Optional": true,
        "Computed": true,
        "Elem": {
          "Type": "SchemaElements",
          "ElementsType": "String"
        }
      },
      "wait_timeout": {
        "Type": "Int",
        "Optional": true,
        "Default": {
          "Type": "int",
          "Value": "15"
        }
      }
    }
  },
  "data-sources": {}
}