{
  ".schema_version": "1",
  "name": "hedvig",
  "type": "provider",
  "version": "v1.1.1",
  "provider": {
    "node": {
      "Type": "String",
      "Required": true
    },
    "password": {
      "Type": "String",
      "Required": true,
      "DefaultFunc": "ENV(HV_TESTPASS)"
    },
    "username": {
      "Type": "String",
      "Required": true,
      "DefaultFunc": "ENV(HV_TESTUSER)"
    }
  },
  "resources": {
    "hedvig_access": {
      "address": {
        "Type": "String",
        "Required": true
      },
      "host": {
        "Type": "String",
        "Required": true
      },
      "type": {
        "Type": "String",
        "Required": true
      },
      "vdisk": {
        "Type": "String",
        "Required": true
      }
    },
    "hedvig_lun": {
      "controller": {
        "Type": "String",
        "Required": true
      },
      "vdisk": {
        "Type": "String",
        "Required": true
      }
    },
    "hedvig_mount": {
      "controller": {
        "Type": "String",
        "Required": true
      },
      "vdisk": {
        "Type": "String",
        "Required": true
      }
    },
    "hedvig_vdisk": {
      "name": {
        "Type": "String",
        "Required": true
      },
      "residence": {
        "Type": "String",
        "Optional": true,
        "Default": {
          "Type": "string",
          "Value": "HDD"
        }
      },
      "size": {
        "Type": "Int",
        "Required": true
      },
      "type": {
        "Type": "String",
        "Required": true
      }
    }
  },
  "data-sources": {}
}