{
  ".schema_version": "1",
  "name": "netlify",
  "type": "provider",
  "version": "v0.4.0",
  "provider": {
    "base_url": {
      "Type": "String",
      "Optional": true,
      "Description": "The Netlify Base API URL",
      "DefaultFunc": "ENV(NETLIFY_BASE_URL)"
    },
    "token": {
      "Type": "String",
      "Required": true,
      "Description": "The OAuth token used to connect to Netlify.",
      "DefaultFunc": "ENV(NETLIFY_TOKEN)"
    }
  },
  "resources": {
    "netlify_build_hook": {
      "branch": {
        "Type": "String",
        "Required": true
      },
      "site_id": {
        "Type": "String",
        "Required": true
      },
      "title": {
        "Type": "String",
        "Required": true
      },
      "url": {
        "Type": "String",
        "Computed": true
      }
    },
    "netlify_deploy_key": {
      "public_key": {
        "Type": "String",
        "Computed": true
      }
    },
    "netlify_hook": {
      "data": {
        "Type": "Map",
        "Required": true
      },
      "event": {
        "Type": "String",
        "Required": true
      },
      "site_id": {
        "Type": "String",
        "Required": true
      },
      "type": {
        "Type": "String",
        "Required": true
      }
    },
    "netlify_site": {
      "account_name": {
        "Type": "String",
        "Computed": true
      },
      "account_slug": {
        "Type": "String",
        "Optional": true,
        "Computed": true
      },
      "custom_domain": {
        "Type": "String",
        "Optional": true
      },
      "deploy_url": {
        "Type": "String",
        "Computed": true
      },
      "name": {
        "Type": "String",
        "Optional": true,
        "Computed": true
      },
      "repo": {
        "Type": "List",
        "Optional": true,
        "MaxItems": 1,
        "IsBlock": true,
        "Elem": {
          "Type": "SchemaInfo",
          "Info": {
            "command": {
              "Type": "String",
              "Optional": true
            },
            "deploy_key_id": {
              "Type": "String",
              "Optional": true
            },
            "dir": {
              "Type": "String",
              "Optional": true
            },
            "provider": {
              "Type": "String",
              "Required": true
            },
            "repo_branch": {
              "Type": "String",
              "Required": true
            },
            "repo_path": {
              "Type": "String",
              "Required": true
            }
          }
        }
      }
    }
  },
  "data-sources": {}
}