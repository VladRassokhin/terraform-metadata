{
  ".schema_version": "2",
  ".sdk_type": "terraform-plugin-sdk-v2",
  "name": "dnsimple",
  "type": "provider",
  "version": "v0.10.0",
  "provider": {
    "account": {
      "Type": "String",
      "Required": true,
      "Description": "The account for API operations.",
      "DefaultFunc": "ENV(DNSIMPLE_ACCOUNT)"
    },
    "prefetch": {
      "Type": "Bool",
      "Optional": true,
      "Description": "Flag to enable the prefetch of zone records",
      "DefaultFunc": "ENV(PREFETCH)"
    },
    "sandbox": {
      "Type": "Bool",
      "Optional": true,
      "Description": "Flag to enable the sandbox API.",
      "DefaultFunc": "ENV(DNSIMPLE_SANDBOX)"
    },
    "token": {
      "Type": "String",
      "Required": true,
      "Description": "The API v2 token for API operations.",
      "DefaultFunc": "ENV(DNSIMPLE_TOKEN)"
    }
  },
  "resources": {
    "dnsimple_domain": {
      "account_id": {
        "Type": "Int",
        "Computed": true
      },
      "auto_renew": {
        "Type": "Bool",
        "Computed": true
      },
      "name": {
        "Type": "String",
        "Required": true
      },
      "private_whois": {
        "Type": "Bool",
        "Computed": true
      },
      "registrant_id": {
        "Type": "Int",
        "Computed": true
      },
      "state": {
        "Type": "String",
        "Computed": true
      },
      "unicode_name": {
        "Type": "String",
        "Computed": true
      }
    },
    "dnsimple_email_forward": {
      "alias_email": {
        "Type": "String",
        "Computed": true
      },
      "alias_name": {
        "Type": "String",
        "Required": true
      },
      "destination_email": {
        "Type": "String",
        "Required": true
      },
      "domain": {
        "Type": "String",
        "Required": true
      }
    },
    "dnsimple_record": {
      "domain": {
        "Type": "String",
        "Required": true
      },
      "domain_id": {
        "Type": "String",
        "Computed": true
      },
      "hostname": {
        "Type": "String",
        "Computed": true
      },
      "name": {
        "Type": "String",
        "Required": true
      },
      "priority": {
        "Type": "String",
        "Optional": true,
        "Computed": true
      },
      "ttl": {
        "Type": "String",
        "Optional": true,
        "Default": {
          "Type": "string",
          "Value": "3600"
        }
      },
      "type": {
        "Type": "String",
        "Required": true
      },
      "value": {
        "Type": "String",
        "Required": true
      }
    },
    "dnsimple_zone_record": {
      "name": {
        "Type": "String",
        "Required": true
      },
      "priority": {
        "Type": "String",
        "Optional": true,
        "Computed": true
      },
      "qualified_name": {
        "Type": "String",
        "Computed": true
      },
      "ttl": {
        "Type": "String",
        "Optional": true,
        "Default": {
          "Type": "string",
          "Value": "3600"
        }
      },
      "type": {
        "Type": "String",
        "Required": true
      },
      "value": {
        "Type": "String",
        "Required": true
      },
      "zone_id": {
        "Type": "String",
        "Computed": true
      },
      "zone_name": {
        "Type": "String",
        "Required": true
      }
    }
  },
  "data-sources": {
    "dnsimple_zone": {
      "account_id": {
        "Type": "Int",
        "Computed": true
      },
      "id": {
        "Type": "Int",
        "Computed": true
      },
      "name": {
        "Type": "String",
        "Required": true
      },
      "reverse": {
        "Type": "Bool",
        "Computed": true
      }
    }
  }
}