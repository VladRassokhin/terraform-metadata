{
  ".schema_version": "1",
  "name": "vmc",
  "type": "provider",
  "version": "v1.2.1",
  "provider": {
    "csp_url": {
      "Type": "String",
      "Optional": true,
      "Default": {
        "Type": "string",
        "Value": "https://console.cloud.vmware.com"
      }
    },
    "org_id": {
      "Type": "String",
      "Required": true,
      "DefaultFunc": "ENV(ORG_ID)"
    },
    "refresh_token": {
      "Type": "String",
      "Required": true,
      "DefaultFunc": "ENV(API_TOKEN)"
    },
    "vmc_url": {
      "Type": "String",
      "Optional": true,
      "Default": {
        "Type": "string",
        "Value": "https://vmc.vmware.com"
      }
    }
  },
  "resources": {
    "vmc_public_ip": {
      "display_name": {
        "Type": "String",
        "Optional": true,
        "Description": "Display name/notes about this resource"
      },
      "ip": {
        "Type": "String",
        "Description": "Public IP associated with the SDDC",
        "Computed": true
      },
      "nsxt_reverse_proxy_url": {
        "Type": "String",
        "Required": true,
        "Description": "NSX API public endpoint url used for public IP resource management"
      }
    },
    "vmc_sddc": {
      "__timeouts__": [
        "create",
        "update",
        "delete"
      ],
      "account_link_sddc_config": {
        "Type": "List",
        "Optional": true,
        "IsBlock": true,
        "Elem": {
          "Type": "SchemaInfo",
          "Info": {
            "connected_account_id": {
              "Type": "String",
              "Optional": true
            },
            "customer_subnet_ids": {
              "Type": "List",
              "Optional": true,
              "Elem": {
                "Type": "SchemaElements",
                "ElementsType": "String"
              }
            }
          }
        }
      },
      "cloud_password": {
        "Type": "String",
        "Computed": true
      },
      "cloud_username": {
        "Type": "String",
        "Computed": true
      },
      "cluster_id": {
        "Type": "String",
        "Computed": true
      },
      "delay_account_link": {
        "Type": "Bool",
        "Optional": true,
        "Default": {
          "Type": "bool",
          "Value": "false"
        }
      },
      "deployment_type": {
        "Type": "String",
        "Optional": true,
        "Default": {
          "Type": "string",
          "Value": "SingleAZ"
        }
      },
      "host_instance_type": {
        "Type": "String",
        "Optional": true
      },
      "nsxt_reverse_proxy_url": {
        "Type": "String",
        "Computed": true
      },
      "num_host": {
        "Type": "Int",
        "Required": true
      },
      "provider_type": {
        "Type": "String",
        "Optional": true,
        "Default": {
          "Type": "string",
          "Value": "AWS"
        }
      },
      "region": {
        "Type": "String",
        "Required": true
      },
      "sddc_name": {
        "Type": "String",
        "Required": true
      },
      "sddc_state": {
        "Type": "String",
        "Computed": true
      },
      "sddc_template_id": {
        "Type": "String",
        "Optional": true
      },
      "sddc_type": {
        "Type": "String",
        "Optional": true
      },
      "skip_creating_vxlan": {
        "Type": "Bool",
        "Optional": true,
        "Default": {
          "Type": "bool",
          "Value": "true"
        }
      },
      "sso_domain": {
        "Type": "String",
        "Optional": true,
        "Default": {
          "Type": "string",
          "Value": "vmc.local"
        }
      },
      "storage_capacity": {
        "Type": "String",
        "Optional": true
      },
      "vc_url": {
        "Type": "String",
        "Computed": true
      },
      "vpc_cidr": {
        "Type": "String",
        "Optional": true
      },
      "vxlan_subnet": {
        "Type": "String",
        "Optional": true
      }
    },
    "vmc_site_recovery": {
      "__timeouts__": [
        "create",
        "delete"
      ],
      "sddc_id": {
        "Type": "String",
        "Required": true,
        "Description": "SDDC identifier"
      },
      "site_recovery_state": {
        "Type": "String",
        "Description": "Site recovery state. Possible values are: ACTIVATED, ACTIVATING, CANCELED, DEACTIVATED, DEACTIVATING, DELETED, FAILED",
        "Computed": true
      },
      "srm_extension_key_suffix": {
        "Type": "String",
        "Optional": true,
        "Description": "The custom extension suffix for SRM must contain 13 characters or less, be composed of letters, numbers, ., - characters only. The suffix is appended to com.vmware.vcDr- to form the full extension key. "
      },
      "srm_node": {
        "Type": "Map",
        "Computed": true
      },
      "user_id": {
        "Type": "String",
        "Description": "User id that last updated this record.",
        "Computed": true
      },
      "user_name": {
        "Type": "String",
        "Description": "User name that last updated this record.",
        "Computed": true
      },
      "vr_node": {
        "Type": "Map",
        "Computed": true
      }
    },
    "vmc_srm_node": {
      "__timeouts__": [
        "create",
        "delete"
      ],
      "sddc_id": {
        "Type": "String",
        "Required": true,
        "Description": "SDDC identifier"
      },
      "srm_instance": {
        "Type": "Map",
        "Computed": true
      },
      "srm_node_extension_key_suffix": {
        "Type": "String",
        "Required": true,
        "Description": "The custom extension suffix for SRM must contain 13 characters or less, be composed of letters, numbers, ., - characters only. The suffix is appended to com.vmware.vcDr- to form the full extension key. "
      }
    }
  },
  "data-sources": {
    "vmc_connected_accounts": {
      "account_number": {
        "Type": "String",
        "Required": true,
        "Description": "AWS account number."
      },
      "id": {
        "Type": "String",
        "Description": "The corresponding connected (customer) account UUID this connection is attached to.",
        "Computed": true
      },
      "provider_type": {
        "Type": "String",
        "Optional": true,
        "Description": "The cloud provider of the SDDC (AWS or ZeroCloud).",
        "Default": {
          "Type": "string",
          "Value": "AWS"
        }
      }
    },
    "vmc_customer_subnets": {
      "connected_account_id": {
        "Type": "String",
        "Optional": true,
        "Description": "The linked connected account identifier."
      },
      "customer_available_zones": {
        "Type": "List",
        "Description": "A list of AWS availability zones.",
        "Computed": true,
        "Elem": {
          "Type": "SchemaElements",
          "ElementsType": "String"
        }
      },
      "force_refresh": {
        "Type": "Bool",
        "Optional": true,
        "Description": "When true, forces the mappings for datacenters to be refreshed for the connected account."
      },
      "ids": {
        "Type": "List",
        "Description": "A list of AWS subnet IDs to create links to in the customer's account.",
        "Computed": true,
        "Elem": {
          "Type": "SchemaElements",
          "ElementsType": "String"
        }
      },
      "instance_type": {
        "Type": "String",
        "Optional": true,
        "Description": "The server instance type to be used."
      },
      "num_hosts": {
        "Type": "Int",
        "Optional": true,
        "Description": "The number of hosts ."
      },
      "region": {
        "Type": "String",
        "Required": true,
        "Description": "The VMC region of the cloud resources to work in. (e.g. US_WEST_2)"
      },
      "sddc_id": {
        "Type": "String",
        "Optional": true,
        "Description": "Sddc ID."
      },
      "sddc_type": {
        "Type": "String",
        "Optional": true,
        "Description": "Sddc Type."
      },
      "vpc_map": {
        "Type": "Map",
        "Computed": true
      }
    },
    "vmc_org": {
      "display_name": {
        "Type": "String",
        "Description": "The display name of this resource",
        "Computed": true
      },
      "id": {
        "Type": "String",
        "Description": "Organization identifier.",
        "Computed": true
      },
      "name": {
        "Type": "String",
        "Description": "The Name of this resource",
        "Computed": true
      }
    }
  }
}