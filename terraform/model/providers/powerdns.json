{
  ".schema_version": "2",
  ".sdk_type": "terraform-plugin-sdk-v1",
  "name": "powerdns",
  "type": "provider",
  "version": "v1.4.1",
  "provider": {
    "api_key": {
      "Type": "String",
      "Required": true,
      "Description": "REST API authentication key",
      "DefaultFunc": "ENV(PDNS_API_KEY)"
    },
    "ca_certificate": {
      "Type": "String",
      "Optional": true,
      "Description": "Content or path of a Root CA to be used to verify PowerDNS's SSL certificate",
      "DefaultFunc": "ENV(PDNS_CACERT)"
    },
    "insecure_https": {
      "Type": "Bool",
      "Optional": true,
      "Description": "Disable verification of the PowerDNS server's TLS certificate",
      "DefaultFunc": "ENV(PDNS_INSECURE_HTTPS)"
    },
    "server_url": {
      "Type": "String",
      "Required": true,
      "Description": "Location of PowerDNS server",
      "DefaultFunc": "ENV(PDNS_SERVER_URL)"
    }
  },
  "resources": {
    "powerdns_record": {
      "name": {
        "Type": "String",
        "Required": true
      },
      "records": {
        "Type": "Set",
        "Required": true,
        "ConfigImplicitMode": "Attr",
        "Elem": {
          "Type": "SchemaElements",
          "ElementsType": "String"
        }
      },
      "set_ptr": {
        "Type": "Bool",
        "Optional": true,
        "Description": "For A and AAAA records, if true, create corresponding PTR."
      },
      "ttl": {
        "Type": "Int",
        "Required": true
      },
      "type": {
        "Type": "String",
        "Required": true
      },
      "zone": {
        "Type": "String",
        "Required": true
      }
    },
    "powerdns_zone": {
      "account": {
        "Type": "String",
        "Optional": true,
        "Default": {
          "Type": "string",
          "Value": "admin"
        }
      },
      "kind": {
        "Type": "String",
        "Required": true
      },
      "masters": {
        "Type": "Set",
        "Optional": true,
        "ConfigImplicitMode": "Attr",
        "Elem": {
          "Type": "SchemaElements",
          "ElementsType": "String"
        }
      },
      "name": {
        "Type": "String",
        "Required": true
      },
      "nameservers": {
        "Type": "Set",
        "Optional": true,
        "ConfigImplicitMode": "Attr",
        "Elem": {
          "Type": "SchemaElements",
          "ElementsType": "String"
        }
      },
      "soa_edit_api": {
        "Type": "String",
        "Optional": true
      }
    }
  },
  "data-sources": {}
}